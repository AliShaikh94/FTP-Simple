{
  "name": "ftp-simple",
  "displayName": "ftp-simple",
  "description": "Simple FTP/SFTP",
  "version": "0.1.14",
  "publisher": "humy2833",
  "engines": {
    "vscode": "^0.10.10"
  },
  "keywords" : ["ftp", "sftp", "remote", "download", "upload"],
  "categories": [
    "Other"
  ],
	"license": "MIT",
	"repository": {
    "type": "git",
    "url": "https://github.com/humy2833/FTP-Simple.git"
  },
  "bugs": {
    "url": "https://github.com/humy2833/FTP-Simple/issues"
  },
  "icon": "logo.png",
  "activationEvents": [
    "onCommand:ftp.remote.config",
    "onCommand:ftp.remote.open",
    "onCommand:ftp.remote.save",
    "onCommand:ftp.remote.delete",
    "onCommand:ftp.remote.mkdir"
  ],
  "main": "./extension",
  "contributes": {
    "commands": [
      {
        "command": "ftp.remote.config",
        "title": "ftp-simple : CONFIG - ftp connection setting"
      },
      {
        "command": "ftp.remote.open",
        "title": "ftp-simple : OPEN - download from ftp server"
      },
      {
        "command": "ftp.remote.save",
        "title": "ftp-simple : SAVE - upload to ftp server"
      },
      {
        "command": "ftp.remote.delete",
        "title": "ftp-simple : DELETE - file or directory in ftp server(recursive)"
      },
      {
        "command": "ftp.remote.mkdir",
        "title": "ftp-simple : CREATE DIRECTORY - to ftp server"
      }      
    ]
    ,"keybindings": [
			{
				"command": "ftp.remote.save",
				"key": "ctrl+shift+s",
				"mac": "cmd+shift+s"
			},
      {
				"command": "ftp.remote.open",
				"key": "ctrl+shift+o",
				"mac": "cmd+shift+o"
			}
		]
    ,"menus" : {
      "explorer/context": [{
        "command": "ftp.remote.save",
        "group": "ftp-simple"
      }],
      "editor/context": [{
        "command": "ftp.remote.save",
        "group": "ftp-simple"
      }],
      "editor/title": [{
        "command": "ftp.remote.save",
        "group": "ftp-simple"
      }]
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "vscode": "^0.11.0"
  },
  "dependencies": {
    "easy-ftp": "^0.3.12",
    "filesize": "^3.3.0",
    "fs-extra": "^0.30.0"
  }
}
